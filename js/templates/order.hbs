<section id="order{{id}}" class="{{strings.[1]}}Section">
    <div class="row background {{strings.[1]}}">

        <div class="columnonebackground">
            <p>{{date}}</p>
        </div>
        <div class="columntwo">
            <p>№ {{orderNumber}}</p>
        </div>
        <div class="columnthree">

            <div><img src="{{strings.[2]}}"/> {{strings.[0]}}

                <img class="openCloseIcon" id="arroworder<%= id %>"
                     src="{{setArrowImage display}}" align="right"/></div>
        </div>
    </div>
</section>

<section id="fullorder{{id}}" class="fullOrderInfo" style="display: {{display}};">
    <div class="clear15"></div>
    <div class="orderInformation">
        <div class="orderInfoField">
            Имя получателя: <br/>
            Электронная почта: <br/>
            Доставка: <br/>
            Оплата: <br/>
        </div>
        <div class="orderInfoFieldValues left">{{name}}<br/>
            {{telephone}}<br/>
            {{strings.[3]}}. {{address}}<br/>
            {{strings.[4]}}
            <br/>
        </div>
    </div>
    <div class="clear20"></div>

    <div class="selectedOrderRow">
        <div class="itemsCol">
            <p>Товары в заказе</p>
        </div>
        <div class="numberCol">
            <p>Колличество</p>
        </div>
        <div class="priceCol">
            <div>Цена</div>
        </div>
    </div>


    <div id="items-list-{{id}}">

    </div>

    <div class="clear"></div>
    <div class="orderInformation">
        <div style="">Доставка: <span
                style="color: #f15e00;"><b>{{priceDelivery}}
            {{currency}}.</b></span>
        </div>
    </div>

    <div class="clear20Border"></div>

    <div class="selectedOrderRow">
        <div class="itemsColContent bonuses">
                <span><b>+{{receivedBonuses}}
                    бонусов</b> за этот заказ</span>
        </div>
        <div class="numberColContent">

        </div>
        <div class="priceColContent orderSummary">
            Сумма заказа: <span style="color: #f15e00;"><b>{{summary}} {{currency}}.</b></span>
        </div>
    </div>

    <div class="clear2050"></div>

</section>
